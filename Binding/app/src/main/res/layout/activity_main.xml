<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="   Counting Game"
        android:background="#4169E1"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:gravity="start|center_vertical"
        app:layout_constraintBottom_toTopOf="@id/counter_textview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/counter_textview"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Counter "
        android:background="#cccccc"
        android:gravity="end|center_vertical"
        android:layout_margin="5dp"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@id/radio_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
    />
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/radio_button"
        app:layout_constraintBottom_toTopOf="@id/ten_checkbox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/counter_textview">
        <RadioButton
            android:id="@+id/up_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Count Up"
            android:checked="true" />
        <RadioButton
            android:id="@+id/down_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Count Down"/>
    </RadioGroup>
    <CheckBox
        android:id="@+id/ten_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ten Each Step"
        app:layout_constraintBottom_toTopOf="@id/count_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/radio_button"/>
    <Button
        android:id="@+id/count_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Count"
        android:layout_margin="10dp"
        android:textColor="@color/white"
        android:background="@drawable/rounded"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ten_checkbox"
        />


</androidx.constraintlayout.widget.ConstraintLayout>