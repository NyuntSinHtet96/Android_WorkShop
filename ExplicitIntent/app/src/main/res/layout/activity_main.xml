<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/writeQuote"
        style="@style/btnStyle"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:background="#abcdef"
        android:text="@string/writeQuote"
        app:layout_constraintRight_toLeftOf="@+id/showQuote"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/showQuote"
        style="@style/btnStyle"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:background="#99e3e3"
        android:text="@string/showQuote"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/writeQuote"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>